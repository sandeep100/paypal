<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name, required: true %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :school_name %><br>
    <%= f.text_field :school_name %>
  </div>
  <div class="field">
    <%= f.label :address1 %><br>
    <%= f.text_area :address1 %>
  </div>
  <div class="field">
    <%= f.label :address2 %><br>
    <%= f.text_area :address2 %>
  </div>
  <div class="field">
    <%= f.label :business_area %><br>
    <%= f.text_field :business_area %>
  </div>
  <div class="field">
    <%= f.label :person_title %><br>
    <%#= f.text_field :person_title %>
    <%= f.select(:person_title, ['CHIEF LEGAL OFFICER','THE GENERAL COUNSEL','The CEO'], :prompt => 'Select') %>
  </div>
  <div class="field">
    <%= f.label :industry_type %><br>
    <%= f.text_field :industry_type %>
  </div>
  <div class="field">
    <%= f.label :dept_size %><br>
    <%= f.number_field :dept_size %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :zip_code %><br>
    <%= f.text_field :zip_code %>
  </div>
  <div class="field">
    <%= f.label :profile_image %><br>
    <%= f.file_field :profile_image %>
  </div><div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, required: true %>
  </div><div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :pattern=>".{8,20}", :title => "password should be 8 charctors or more." %>
  </div>
  <div class="field">
    <%= f.label :image_1 %><br>
    <%= f.file_field :image1 %>
  </div>
  <div class="field">
    <%= f.label :image_2 %><br>
    <%= f.file_field :image2 %>
  </div>
  <div class="field">
    <%= f.label :image_3 %><br>
    <%= f.file_field :image3 %>
  </div>
  <div class="field">
    <%= f.label :about %><br>
    <%= f.text_area :about %>
  </div><br>
  <div class="field">
    <input type="checkbox" required>Accept Terms of use
  </div><br>
  <input type="hidden" value="1" name="role">
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
