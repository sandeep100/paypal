<h1>Listing Companies</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>First name</th>
      <th>Last name</th>
      <th>School name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Business area</th>
      <th>Person title</th>
      <th>Industry type</th>
      <th>Dept size</th>
      <th>Country</th>
      <th>City</th>
      <th>Zip code</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.first_name %></td>
        <td><%= company.last_name %></td>
        <td><%= company.school_name %></td>
        <td><%= company.address1 %></td>
        <td><%= company.address2 %></td>
        <td><%= company.business_area %></td>
        <td><%= company.person_title %></td>
        <td><%= company.industry_type %></td>
        <td><%= company.dept_size %></td>
        <td><%= company.country %></td>
        <td><%= company.city %></td>
        <td><%= company.zip_code %></td>
        <td><%= company.about %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

