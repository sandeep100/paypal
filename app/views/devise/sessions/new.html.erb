<%#= render "devise/shared/links" %>
<div class="container">
  <div class="innerWidth loginOuter">
    <div class="videoLink">
      <a href="#" class="videoPopLink">
        <img src="/images/video.png" border="0">
      </a>
    </div>
    <div class="formOuter">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, :placeholder =>"Username", class: :whiteInput %>
        <%= f.password_field :password, autocomplete: "off", :placeholder =>"Password", class: :whiteInput %>
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %><br />
          <% end -%>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end -%>
        <%= f.submit "Log in", value: :login, class: :logInBtn %>
      <% end %>
      <div class="circleHD"><span>or</span>
        <div class="border"></div>
        <div class="borderR"></div>
      </div>
      <div class="reg">
        <%= link_to "register", new_registration_path(resource_name), class: :regBtn %>
      </div>
      <div class="shareOuter">
        <%= link_to image_tag('/images/fbBtn.png'), user_omniauth_authorize_path(:facebook) %>
        <%= link_to image_tag('/images/liBtn.png'), user_omniauth_authorize_path(:linkedin) %>
        <%= link_to image_tag('/images/gpBtn.png'), user_omniauth_authorize_path(:google_oauth2) %>
      </div>
    </div>
  </div>
</div>
<div class="videoPop">
  <div class="closeBtn"> X </div>
  <video  controls="true" loop id="example_video_1" class="video-js vjs-default-skin" preload="auto" data-setup='{"example_option":true}'>
    <source src="/video/eve.mp4" type='video/mp4' />
    <source src="/video/eve.ogg" type='video/ogg' />
    <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
  </p>
  </video>
</div>
<div class="overlay"></div>